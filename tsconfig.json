{
    "compilerOptions": {
        "module": "commonjs",
        "moduleResolution": "node",
        "esModuleInterop": true,
        "pretty": true,
        "resolveJsonModule": true,
        "sourceMap": true,
        "target": "ES2022",
        "outDir": "./dist",
        "baseUrl": "./src",
        "experimentalDecorators": true,
        "strict": true,
        "typeRoots" : ["node_modules/@types", "src/types"]
    },
    "include": ["src/**/*.ts", "test/**/*.spec.ts"],
    "exclude": ["node_modules"]
}